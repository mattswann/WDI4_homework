
<div class="span-1">
  <h1 style="color:white;"> Select from this movie list: </h1>
</div>

<div class="list" id="list_movies">

<%  @movie_list["Search"].each do | movie | %>

  
  <div class="span-2and3">
    <div class="span-2">
      <% if movie['Poster'] == "N/A" %>
        <img style = "height: 50%" src="/no-pic-available.jpeg" alt="">
      <% else %>
        <img class = "poster" src="<%=movie['Poster']%>" alt="">
      <% end %>
    </div>
    <div class="span-3">
      <a href="/movie/<%=movie['imdbID']%>">  <h3 style="font-size:10px; margin-top: 0px; margin-bottom: 0px;" id='movie_title'><%=movie['Title']%></h3> </a>
      <p style="color:red; margin-top: 0px; margin-bottom: 0px;">Year: <%=movie['Year']%> </p>
    </div>
  </div>



<% end %>

</div>

