
<h1>SELECT FROM THIS MOVIE LIST: </h1>

<div class="list" id="list_movies">

<%  @movie_list["Search"].each do | movie | %>

  
  
  <div class="span-2">
    <img class = "poster" src="<%=movie['Poster']%>" alt="">
  </div>
  <div class="span-3">
    <!-- <img src="img/black00.png" alt="" class="randomCardImg" data-index="0"> -->
    <a href="/movie/<%=movie['Title']%>">  <h2><%=movie['Title']%></h2> </a>
    <p>Year: <%=movie['Year']%> </p>
  </div>
  



<% end %>

</div>

